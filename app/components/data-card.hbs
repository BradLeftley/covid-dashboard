{{yield}}

<div class="card">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <span class="country">{{@country}}</span>
                </div>
                <div class="col-sm">
                    <p class="amount">{{@todaysAmount}}</p>
                </div>
                <div class="col-sm">
                    {{#if casesIncreasing}}
                        {{svg-jar "down" class="arrow-red"}}
                    {{else}}
                        {{svg-jar "down" class="arrow"}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>